{% extends 'base.njk' %}

{%- block contents %}
<main>
    <h2>{{ title }}</h2>
    <ul>
    {%- for i in items %}
    <li>
        <a href="{{ i.permalink | url }}">{{ i.name }}</a><br>
        {%- if i.defines | length %}
        {%- for c in i.defines %}
        <span>{{ c }}</span>
        {%- endfor %}<br>
        {%- endif %}
        {%- if i.keywords | length %}
        {%- for kw in i.keywords %}
        <span>{{ kw }}</span>
        {%- endfor %}<br>
        {%- endif %}
        Created at {{ i.created | formatDate }}
    </li>
    {%- endfor %}
    </ul>
</main>
{%- endblock %}
