<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title }}</title>
        <link rel="stylesheet" href="{{ '/styles.css'|url }}" />
        {%- block extrahead %}
        {%- endblock %}
    </head>
    <body>
        <header>
            <h1>{{ sitename }}</h1>
            <h2>{{ title | safe }}</h2>
        </header>
        {%- block postheader %}
        {%- endblock %}
        <main>
            {%- block contents %}
            {{ contents | safe }}
            {%- endblock %}
        </main>
    </body>
</html>