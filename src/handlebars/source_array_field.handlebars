<div class="control-group">
  <label class="control-label" for="input-{{id}}0">{{name}}</label>
  <div class="controls">
{{#foreach value}}
    <input type="text" class="{{../classes}}" id="input-{{../id}}{{@index}}" value="{{this}}" maxlength="{{../max}}">
    {{#if @last}}<a data-key="{{../../id}}" href="#"><i class="icon-plus"></i></a>{{else}}<br>{{/if}}
{{/foreach}}
  </div>
</div>